{
  "eslint.enable": false,
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.fixAll": "always",
      "quickfix.biome": true,
      "source.organizeImports.biome": true
    }
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.fixAll": "always",
      "quickfix.biome": true,
      "source.organizeImports.biome": true
    }
  },
  "[astro]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.fixAll": "always",
      "quickfix.biome": true,
      "source.organizeImports.biome": true
    }
  },
  "[astro][javascript][json]": {
    "editor.codeActionsOnSave": {
      "source.fixAll": "always",
      "quickfix.biome": "explicit",
      "source.organizeImports.biome": "explicit"
    }
  }
}
