{%- from 'components/images/icons.njk' import tagsSolid -%}

{%- macro tagsList(tags, extraClasses="") -%}
  <span class="tagsList {{extraClasses}}">
    {{ tagsSolid() }}
    {% for tag in tags -%}
      <a href="/tags/{{ tag }}">#{{ tag }}</a>
      {%- if not loop.last -%}
        <span class="tag-separator">, </span>{%- endif %}
    {%- endfor -%}
  </span>
{%- endmacro -%}