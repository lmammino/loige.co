{%- macro icon(name, alt) -%}
  {%- if name == 'twitter' -%}
    {{ twitter(alt) }}
  {%- elseif name == 'github' -%}
    {{ github(alt) }}
  {%- elseif name == 'linkedin' -%}
    {{ linkedin(alt) }}
  {%- elseif name == 'twitch' -%}
    {{ twitch(alt) }}
  {%- elseif name == 'youtube' -%}
    {{ youtube(alt) }}
  {%- endif -%}
{%- endmacro -%}