---
import Hero from './Hero.astro'
import type { PostType } from '../utils/posts'
import site from '../site'

export interface Props {
  currentPage: number
  lastPage: number
  prevPage?: string
  nextPage?: string | false
  posts: PostType[]
}

const props = Astro.props as Props
---

<Hero variations={['bottomRightBg']}>
  <h1>{site.hero.title}</h1>
  <h2>{site.hero.subtitle}</h2>
</Hero>
<main>
  {
    props.posts.map((post) => (
      <h1>
        <a href={`/${post.frontmatter.slug}`}>{post.frontmatter.title}</a>
      </h1>
    ))
  }
  <p>page {props.currentPage} of {props.lastPage}</p>
  <p>{props.prevPage && <a href={props.prevPage}>← Newer Posts</a>}</p>
  <p>{props.nextPage && <a href={props.nextPage}>Older Posts →</a>}</p>
</main>
